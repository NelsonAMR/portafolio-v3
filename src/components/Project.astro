---
interface Project {
  id: number;
  url: string;
  image: string;
  name: string;
  description: string;
  technologies: string[];
}

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="project">
  <div class="project-image">
    <img src={project.image} alt={project.name} />
  </div>
  <div class="project-info">
    <h4>{project.name}</h4>
    <p>{project.description}</p>
    <div class="project-techs">
      {project.technologies.map((tech) => <span>{tech}</span>)}
    </div>
  </div>
</div>

<style lang="scss">
  @use "../styles/variables.scss" as v;

  .project {
    width: 33rem;
    height: 29rem;
    border-radius: 1rem;
    overflow: hidden;
    cursor: pointer;
    background-color: v.$white;

    .project-image {
      width: 100%;
      height: 15rem;
      overflow: hidden;

      img {
        width: 100%;
        object-fit: cover;
        object-position: center;
      }
    }

    .project-info {
      padding: 1rem;
      display: flex;
      flex-direction: column;
      height: calc(100% - 15rem);

      h4 {
        margin-bottom: 0.5rem;
      }

      .project-techs {
        display: flex;
        gap: 0.5rem;
        justify-content: end;
        margin-top: auto;

        span {
          background-color: v.$purple;
          color: v.$white;
          border-radius: 0.5rem;
          padding: 0.5rem;
          font-size: 1.3rem;
        }
      }
    }
  }
</style>
