---
import { Project } from "../utils/projects";

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="project">
  <div class="project-cont">
    <div class="project-image">
      <img
        src={project.image}
        alt={project.name}
        width="300"
        height="300"
        loading="lazy"
      />
    </div>
    <div class="project-info">
      <h4>{project.name}</h4>
      <p>{project.description}</p>
      <div class="project-techs">
        {project.technologies.map((tech) => <span>{tech}</span>)}
      </div>
    </div>
  </div>
  <div class="project-bg"></div>
  <div class="project-buttons">
    <a href={project.demo} target="_blank" class="button">Demo</a>
    <a href={project.repo} target="_blank" class="button">Repositorio</a>
  </div>
</div>

<style lang="scss">
  @use "../styles/variables.scss" as v;

  .project {
    position: relative;
    width: 34rem;
    height: 30rem;
    border-radius: 1rem;
    border: 0.1rem solid v.$purple;
    overflow: hidden;
    background-color: v.$white;
  }

  .project-cont {
    width: 100%;
    height: 100%;

    .project-image {
      width: 100%;
      height: 15rem;
      overflow: hidden;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
      }
    }

    .project-info {
      padding: 1rem;
      display: flex;
      flex-direction: column;
      height: calc(100% - 15rem);

      h4 {
        margin-bottom: 0.5rem;
      }

      .project-techs {
        display: flex;
        flex-wrap: wrap;
        margin-top: auto;
        justify-content: end;
        gap: 0.5rem;

        span {
          background-color: v.$purple;
          color: v.$white;
          border-radius: 0.5rem;
          padding: 0.5rem;
          font-size: 1.3rem;
        }
      }
    }
  }

  .project-buttons {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgb(v.$gray, 0);

    a {
      text-align: center;
      opacity: 0;
      width: 75%;
    }

    &:hover {
      transition: 150ms;
      background-color: rgb(v.$gray, 0.6);
      backdrop-filter: blur(0.5rem);

      a {
        opacity: 1;
      }
    }
  }
</style>
