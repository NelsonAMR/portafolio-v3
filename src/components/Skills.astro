---
import { SkillCard } from "./";
import { skills } from "../utils/skills";
---

<section id="skills" class="skills">
  <h2>Tecnologias</h2>

  <div class="skills-cont">
    {
      skills.map((skill) => (
        <SkillCard
          key={skill.id}
          img={skill.img}
          name={skill.name}
          level={skill.level}
        />
      ))
    }
  </div>
</section>

<style lang="scss">
  .skills {
    margin-bottom: 10rem;

    h2 {
      margin-bottom: 5rem;
    }
  }

  .skills-cont {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }
</style>
