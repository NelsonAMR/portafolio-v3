---
import { Icon } from "astro-icon";
---

<div class="nav-cont">
  <div class="nav-mobile">
    <Icon name="ic:round-menu" class="icon" id="menu" />

    <div class="nav-bg hide" id="nav">
      <nav>
        <span class="nav-close">X</span>
        <a href="#home">Inicio</a>
        <a href="#about">Acerca</a>
        <a href="#skills">Habilidades</a>
        <a href="#projects">Proyectos</a>
        <a href="#contact">Contactar</a>
      </nav>
    </div>
  </div>

  <nav>
    <a href="#home">Inicio</a>
    <a href="#about">Acerca</a>
    <a href="#skills">Habilidades</a>
    <a href="#projects">Proyectos</a>
    <a href="#contact">Contactar</a>
  </nav>
</div>

<style lang="scss">
  @use "../styles/variables.scss" as v;
  @use "../styles/mixins.scss" as m;

  .nav-cont {
    display: flex;
    align-items: center;

    nav {
      display: none;

      @include m.tablet {
        display: flex;
        gap: 2rem;
        font-size: 1.8rem;
      }
    }
  }

  .nav-mobile {
    @include m.tablet {
      display: none;
    }

    .icon {
      width: 4rem;
      cursor: pointer;
    }

    .nav-bg {
      position: fixed;
      display: none;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
      background-color: rgb(0, 0, 0, 0);
      transition: background-color 400ms;

      nav {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
        background-color: v.$light;
        position: fixed;
        top: 0;
        right: 0;
        width: 100%;
        max-width: 45rem;
        height: 100%;
        transform: translate(100%, 0);
        transition: transform 400ms;

        .nav-close {
          display: flex;
          align-items: center;
          justify-content: center;
          align-self: flex-end;
          margin: 1rem 1rem 0 0;
          font-size: 2rem;
          cursor: pointer;
          width: 4rem;
          min-height: 4rem;
          border: 0.1rem solid v.$gray;
          border-radius: 100%;
          transition: 200ms ease-out;
          background-color: v.$light;

          &:hover {
            background-color: v.$purple;
            color: v.$white;
            border: none;
          }
        }

        a {
          font-size: 2rem;
          width: 100%;
          height: 100%;
          display: flex;
          align-items: center;
          justify-content: center;
        }
      }
    }

    .nav-bg.show {
      background-color: rgb(0, 0, 0, 0.75);

      nav {
        transform: translate(0, 0);
      }
    }
  }
</style>

<script>
  const menu = document.getElementById("menu");
  const nav = document.getElementById("nav");
  const navCont = document.querySelector<HTMLElement>("#nav nav");

  menu?.addEventListener("click", showNav);
  nav?.addEventListener("click", closeNav);

  function showNav() {
    if (nav && navCont) {
      nav.style.display = "block";
      setTimeout(() => {
        nav.classList.add("show");
      }, 0);
    }
  }

  function closeNav() {
    if (nav && navCont) {
      nav.classList.remove("show");

      setTimeout(() => {
        nav.style.display = "none";
      }, 500);
    }
  }
</script>
