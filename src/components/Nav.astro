  </div>
</div>

<style lang="scss">
  @use "../styles/variables.scss" as v;
  @use "../styles/mixins.scss" as m;

  .nav-cont {
    display: flex;
    align-items: center;

    nav {
      display: none;

      @include m.tablet {
        display: flex;
        gap: 2rem;
        font-size: 1.8rem;

        a {
          transition: 100ms ease-out;

          &:hover {
            color: darken(v.$purple, 10%);
          }
        }
      }
    }
  }

  .nav-mobile {
    @include m.tablet {
      display: none;
    }

    .icon {
      width: 4rem;
      cursor: pointer;
    }

    .nav-bg {
      position: fixed;
      display: none;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
      background-color: rgb(0, 0, 0, 0);
      transition: background-color 400ms;

      .nav-header {
        display: flex;
        flex-direction: column;
        gap: 5rem;
        padding-bottom: 2rem;
        border-bottom: 0.1rem solid lighten(v.$primary, 50%);

        .nav-logo {
          display: flex;
          justify-content: space-between;

          .logo {
            color: v.$secondary;
          }
        }

        .nav-close {
          display: flex;
          align-items: center;
          justify-content: center;
          align-self: flex-end;
          font-size: 2rem;
          cursor: pointer;
          width: 4rem;
          min-height: 4rem;
          border: 0.1rem solid v.$gray;
          border-radius: 100%;
          transition: 200ms ease-out;
          background-color: transform v.$light;

          &:active {
            background-color: v.$purple;
            color: v.$white;
            border: none;
          }
        }
      }

      .nav {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        background-color: v.$light;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        max-width: 45rem;
        height: 100%;
        transform: translate(-100%, 0);
        transition: transform 400ms;
        padding: 2rem;

        nav {
          display: flex;
          align-items: center;
          flex-direction: column;
          align-items: start;
          justify-content: start;
          gap: 2rem;

          a {
            font-size: 2rem;
          }
        }

        .nav-footer {
          h3 {
            margin-bottom: 3rem;
          }
        }

        .icons {
          display: flex;
          justify-content: center;
          gap: 1rem;
          margin-bottom: 3rem;

          a {
            display: flex;
            align-items: center;
            justify-content: center;
            border: 0.1rem solid v.$primary;
            border-radius: 100%;
            width: 4rem;
            height: 4rem;
            transition: 150ms;

            @include m.tablet {
              &:hover {
                scale: 1.1;
              }
            }

            .icon {
              width: 2rem;
              color: v.$primary;
              cursor: pointer;
            }
          }
        }
      }
    }

    .nav-bg.show {
      background-color: rgb(0, 0, 0, 0.75);

      .nav {
        transform: translate(0, 0);
      }
    }
  }
</style>

<script>
  const menu = document.getElementById("menu");
  const nav = document.getElementById("nav");
  const navCont = document.querySelector<HTMLElement>("#nav nav");

  menu?.addEventListener("click", showNav);
  nav?.addEventListener("click", closeNav);

  function showNav() {
    if (nav && navCont) {
      nav.style.display = "block";
      setTimeout(() => {
        nav.classList.add("show");
      }, 0);
    }
  }

  function closeNav() {
    if (nav && navCont) {
      nav.classList.remove("show");

      setTimeout(() => {
        nav.style.display = "none";
      }, 400);
    }
  }
</script>
